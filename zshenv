# ~/.zshenv
# (这个文件在所有 Zsh 实例中加载, 包括脚本)

# 确保 Zsh 路径在前面
export PATH="/usr/local/bin:/usr/bin:/bin:/usr/sbin:/sbin"

# (示例) 添加 Go 路径
# export PATH="$PATH:$HOME/go/bin"

# (示例) 添加 Rust 路径
# export PATH="$PATH:$HOME/.cargo/bin"

# 设置默认编辑器
export EDITOR='vim'

# 设置语言环境
export LANG='en_US.UTF-8'
export LC_ALL='en_US.UTF-8'
